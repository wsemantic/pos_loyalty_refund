    <template id="report_simple_label_dymo_custom" inherit_id="product.report_simple_label_dymo">
        <!-- Cambiar la clase del elemento del precio a 'o_label_price_medium' -->
        <xpath expr="//strong[contains(@class, 'o_label_price_small')]" position="attributes">
            <attribute name="class">o_label_price_medium</attribute>
            <attribute name="style">font-size: 1.7em; margin-top: -5mm;display: inline-block;</attribute>
			<!--En elementos con display: inline;, los márgenes verticales no afectan el flujo del documento, pero al cambiar a inline-block, puedes aplicar márgenes verticales y ajustar su posición.-->
        </xpath>
    </template>
	

