<?xml version="1.0" encoding="UTF-8"?>
<odoo>
<template id="report_simple_label_dymo_custom" inherit_id="product.report_simple_label_dymo">
        <!-- Mover el contenedor del precio debajo del nombre del producto -->
        <xpath expr="//div[@class='o_label_name']" position="after">
            <xpath expr="//div[@class='text-end']" position="move"/>
        </xpath>
        
        <!-- Ajustar el estilo del nombre del producto -->
        <xpath expr="//div[@class='o_label_name']" position="attributes">
            <attribute name="style">margin-bottom: 0; line-height: 100%; background-color: transparent; padding-top: 1px;</attribute>
        </xpath>
        
        <!-- Ajustar el contenedor del precio -->
        <xpath expr="//div[@class='text-end']" position="attributes">
            <attribute name="style">padding: 0 4px; margin-top: 0; margin-bottom: 2mm;</attribute>
        </xpath>
        
        <!-- Ajustar el tamaño de fuente del precio -->
        <xpath expr="//div[@class='text-end']//strong" position="attributes">
            <attribute name="style">font-size: 1.5em;</attribute>
        </xpath>
        
        <!-- Ajustar la posición del código de barras -->
        <xpath expr="//div[contains(@class, 'o_label_small_barcode')]" position="attributes">
            <attribute name="style">margin-top: 0;</attribute>
        </xpath>
    </template>
</odoo>